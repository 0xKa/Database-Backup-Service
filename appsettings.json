{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AppConfiguration": {
    "ConnectionString": "Server=localhost;Database=mydb;User Id=myuser;Password=mypassword;",
    "Directories": {
      "Logs": "Logs",
      "Backups": "Backups"
    },
    "Files": {
      "ApplicationLog": "app.log",
      "ErrorLog": "errors.log"
    },
    "CustomPaths": {
      "ApplicationLogPath": null,
      "ErrorLogPath": null,
      "DatabaseBackupPath": "F:\\DB-Backups"
    }
  }
}
